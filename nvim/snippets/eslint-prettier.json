{
  "Eslint Rules": {
    "prefix": "eslintRules",
    "body": [
      "   \"react/react-in-jsx-scope\": \"off\",",
      "    \"react/prop-types\": \"off\",",
      "    \"react/jsx-sort-props\": [",
      "      \"warn\",",
      "      {",
      "        \"callbacksLast\": true,",
      "        \"shorthandFirst\": true,",
      "        \"noSortAlphabetically\": false,",
      "        \"reservedFirst\": true",
      "      }",
      "    ]"
    ],
    "description": "Eslint Rules"
  },
  "prettier Rules": {
    "prefix": "prettierRules",
    "body": [
      "{",
      "  \"semi\": false,",
      "  \"singleQuote\": false,",
      "  \"tabWidth\": 2,",
      "  \"useTabs\": false,",
      "  \"jsxSingleQuote\": false,",
      "  \"printWidth\": 80,",
      "  \"bracketSpacing\": true,",
      "  \"arrowParens\": \"avoid\",",
      "  \"plugins\": [\"@trivago/prettier-plugin-sort-imports\", \"prettier-plugin-tailwindcss\"],",
      "  \"importOrder\": [",
      "    \"^node:(.*)$\",",
      "    \"^react(.*)$\",",
      "    \"^next(.*)$\",",
      "    \"^@chakra(.*)$\",",
      "    \"^[^\\\\\\\\.]+$\",",
      "    \"^\\\\\\\\.{2}(.*)$\",",
      "    \"^\\\\\\\\.{1}(.*)$\",",
      "    \"^(.*)$\"",
      "  ],",
      "  \"importOrderSeparation\": true,",
      "  \"importOrderSortSpecifiers\": true",
      "}",
      ""
    ],
    "description": "prettier Rules"
  }
}

